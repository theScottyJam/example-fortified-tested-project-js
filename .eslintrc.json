{
  "extends": "standard",
  "env": {
    "mocha": true
  },
  "rules": {
    "semi": [2, "always"],
    "space-before-function-paren": [2, { "anonymous": "never", "named": "never", "asyncArrow": "always" }],
    "comma-dangle": [2, "always-multiline"],
    "n/no-callback-literal": [0],
    "no-undef-init": [0],
    "curly": [0]
  }
}
